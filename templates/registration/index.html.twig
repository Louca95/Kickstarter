{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center">Cr√©er un compte</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.email, 'Adresse Email') }}
                    {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.email) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.mot_de_passe.first) }}
                    {{ form_widget(form.mot_de_passe.first, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.mot_de_passe.first) }}
                </div>

                <div class="form-group mt-3">
                    {{ form_label(form.mot_de_passe.second) }}
                    {{ form_widget(form.mot_de_passe.second, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.mot_de_passe.second) }}
                </div>



                <button type="submit" class="btn btn-primary mt-4 w-100">S'inscrire</button>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}

