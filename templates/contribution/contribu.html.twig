{% extends 'base.html.twig' %}

{% block title %}Ajouter une contribution{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Ajouter une contribution</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <div class="card shadow-sm p-4">
        {{ form_start(form) }}
        <div class="mb-3">
            {{ form_widget(form) }}
        </div>
        <button type="submit" class="btn btn-primary">Ajouter une contribution</button>
        {{ form_end(form) }}
    </div>

    <div class="mt-4">
    {% if contributions is not empty %}
        {% set projetId = contributions[0].projet.id %}
        <a href="{{ path('contribution_view', { 'id': projetId }) }}" class="btn btn-secondary">Retour au projet</a>
    {% else %}
        <a href="{{ path('projet_index') }}" class="btn btn-secondary">Retour Ã  la liste des projets</a>
    {% endif %}
    </div>
</div>
{% endblock %}

